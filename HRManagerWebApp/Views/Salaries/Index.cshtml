@model IEnumerable<HRManagerWebApp.Models.Salary>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4 font-text">All Employee Salary Details</h1>
    <p>You can manage all employee salary details here.</p>
</div>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fa fa-paper-plane"></i> Generate Employee Salary</a>
</p>
<hr />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4  mb-3">

            <div class="card-body shadow border  border-dark col-md-12">
                <h4 class="card-title">@item.Employee.EmployeeName</h4>
                <p class="card-text">@item.SalaryMonth of @item.SalaryYear</p>
                <p class="card-text"> Total Salary: $ @item.TotalSalary</p>
                <div class="row mb-2">
                    <div class="col-md-6">
                        <a asp-action="Details" class="btn btn-info " asp-route-id="@item.SalaryID"><i class="fa fa-eye"></i> Details</a>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Delete" class="btn  btn-danger" asp-route-id="@item.SalaryID"><i class="fa fa-trash"></i> Delete</a>
                    </div>
                </div>
            </div>

        </div>
    }
</div>
